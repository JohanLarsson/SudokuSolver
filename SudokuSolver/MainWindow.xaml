<Window x:Class="SudokuSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sudokuSolver="clr-namespace:SudokuSolver"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" 
        d:DataContext="{d:DesignInstance sudokuSolver:SudokuBoard, IsDesignTimeCreatable=True}" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <sudokuSolver:FlattenConverter x:Key="FlattenConverter"/>
        <sudokuSolver:ToRowsConverter x:Key="ToRowsConverter"/>
        <sudokuSolver:ToColumnsConverter x:Key="ToColumnsConverter"/>
        <DataTemplate x:Key="SudokuCellTemplate" DataType="{x:Type sudokuSolver:SudokuCell}">
            <TextBox Text="{Binding Number}" Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ItemsControl ItemsSource="{Binding Numbers, Converter={StaticResource FlattenConverter}}" ItemTemplate="{StaticResource SudokuCellTemplate}" Height="Auto" Width="Auto">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding Numbers, Converter={StaticResource ToRowsConverter}}" Columns="{Binding Numbers, Converter={StaticResource ToColumnsConverter}}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>    
        </ItemsControl>
    </Grid>
</Window>
